@model LoginViewModel
@{
    ViewData["Tittle"] = "Авторизация";
}

<div>
    <body style="background-color: azure;">
        <font size="2" color="black" face="Arial" align="center">
            <form action="/login" method="post">
                @Html.AntiForgeryToken()
                <p>
                    <label>Email</label>
                    <input name="Email" type="text" value="@Model.Email" />
                    <div class="error">@Html.ValidationMessageFor(m => m.Email)</div>
                </p>
                <p>
                    <label>Пароль</label>
                    <input name="Password" type="password"/>
                </p>
                <p>
                    <input type="checkbox" name="RememberMe" value="true" /> Запомни меня
                </p>
                <button>Авторизация</button>
            </form>
        </font>
    </body>
</div>